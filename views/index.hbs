         #status{
            width: 300px;
            height: 50px;
            border-left: 1px solid #252b36;
            border-bottom: 1px solid #252b36;
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 0 20px;
            float: right;
         }
         #status #status-indicator{
            width: 20px;
            height: 20px;
            border-radius: 1000px;
            background-color: grey;
         }
         #coins-container{
            width: 300px;
            height: calc(100% - 50px);
            padding: 15px 20px;
            overflow: auto;
            float: right;
            border-left: 1px solid #252b36;
         }
         #coins-container #coins{
            width: 100%;
            margin-top: 15px;
         }
         #coins-container #coins .coin{
            height: 40px;
            /*border-bottom: 1px solid #504f4f;*/
            color: #d6d6d6;
            background-color: rgb(20,29,38);
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 5px;
            padding: 0 10px;
         }
         #coins-container #coins .coin:last-child{
            margin-bottom: none;
         }
         #coins-container #coins .coin .name{
            font-size: 1.2rem;
            width: 50px;
         }
         #coins-container #coins .coin .mainBalance{
            font-size: 1.5rem;
            width: calc(100% - 130px);
            text-align: right;
            padding-right: 15px;
            text-overflow: ellipsis;
            overflow: hidden;
            white-space: nowrap;
            display: block;
         }
         #coins-container #coins .coin .other{
            width: 80px;
            text-align: right;
         }
         #coins-container #coins .coin .amount{
            font-size: 1rem;
            color: rgb(98 137 101);
            width: 100%;
            text-overflow: ellipsis;
            overflow: hidden;
            white-space: nowrap;
            display: block;
         }
         #coins-container #coins .coin .price{
            color: rgb(183 152 104);
            font-size: 1rem;
            width: 100%;
            text-overflow: ellipsis;
            overflow: hidden;
            white-space: nowrap;
            display: block;
         }

         .title{
            color: white;
         }

         @media (max-width: 850px) {
            #status{
               width: 100%;
               border-left: none;
               float: unset;
            }

            #balance-container { 
               width: 100%;
               height: fit-content;
               float: unset;
               border-bottom: 1px solid #252b36;
               padding-bottom: 30px;
            }
            #balance-container #balance{
               margin-top: 20px;
            }

            #coins-container{
               width: 100%;
               height: fit-content;
               border-left: none;
               float: unset;
            }
         }
